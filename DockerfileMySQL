# Dockerfile do MySQL
FROM mysql:latest

# Define vari√°veis de ambiente para configurar o banco
ENV MYSQL_ROOT_PASSWORD=6283
ENV MYSQL_DATABASE=sre_desafio
ENV MYSQL_USER=admin
ENV MYSQL_PASSWORD=admin123

# Copia os scripts SQL para dentro do container
COPY ./db_init.sql /docker-entrypoint-initdb.d/

# Expondo a porta do MySQL
EXPOSE 3306
